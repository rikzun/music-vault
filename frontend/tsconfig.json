{
  "include": ["src", "global.d.ts", "assets.d.ts", "declarations.d.ts", "fixes.d.ts"],
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "es2022",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@atoms": ["src/atoms"],
      "@atoms/*": ["src/atoms/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@workers": ["src/workers"],
      "@workers/*": ["src/workers/*"]
    }
  }
}